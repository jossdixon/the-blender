<div class="container">
  <div class="card-profile px-5">
    <button class="btn btn-large" type="button" data-toggle="collapse" data-target="#collapseNote" aria-expanded="false" aria-controls="collapseNote">
      New Note
    </button>
    <br>
    <div class="collapse" id="collapseNote">
      <h1>New Note about</h1>
      <h2>"<%= @profile.user.full_name.titleize%>"</h2>
      <br>
      <%= render 'form', profile:@profile, note:@note%>
    </div>
    <div class="notes py-4">
    <h2>Notes</h2>
      <% if @notes.any? %>
        <% @notes.reverse_each do |note| %>
          <p><i><%= note.created_at.strftime("%A %B %d %Y") %></i></p>
          <p><%= note.content %></p>
          <hr>
        <% end %>
      <% else %>
        <p>No notes about <%= @profile.user.first_name.titleize%> yet.</p>
      <% end %>
      <%= link_to profile_path(@profile) do%>
        <p><i class="fas fa-long-arrow-alt-left fa-2x"></i></p>
      <% end %>
    </div>
  </div>
</div>
