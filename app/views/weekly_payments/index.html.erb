<div class="container">
  <h1>Weekly Payment for <%= @loanee.user.first_name %></h1>
  <br>
  <%= link_to profile_path(@loanee.user.profile) do%>
    <p><i class="fas fa-long-arrow-alt-left fa-2x"></i></p>
  <% end %>
  <div class="row d-flex justify-content-around">
    <div>
    <%= render 'chart', user:@loanee.user%>
    <p style="text-align:center;"><strong>Loan Repayment Chart</strong></p>
    </div>
    <div>
      <p>Loan#: <strong><i><%= @loanee.loan.id %></i></strong></p>
      <p>Loan Start Date: <strong><i><%= @loanee.loan.start_date %></i></strong></p>
      <p>Loan Total for <%= @loanee.user.first_name %>: $<strong><i><%= @loanee.total %></i></strong></p>
    </div>
  </div>
  <br>
  <br>
  <h3 style="text-align:center;">Next weekly payment date is on <u><%= render 'next_payment', loanee:@loanee %></u></h3>
  <br>
  <% if @loanee.weekly_payments.any?%>
    <div style="text-align: center;">
      
      <br>
      <%= render 'table', loanee:@loanee %>
      <br>
      <br>
    </div>
  <% else %>
    <p class="mark-yellow"><%= @loanee.user.full_name%> has not made any payment yet</p>
    <%= link_to profile_path(@loanee.user.profile) do%>
      <p><i class="fas fa-long-arrow-alt-left fa-2x"></i></p>
    <% end %>
  <% end %>
</div>
