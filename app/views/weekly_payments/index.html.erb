<div class="container">
  <h1>Weekly Payment for</h1>
  <h2>"<%= @loanee.user.full_name %>"</h2>
  <br>
  <p>Loan ID: <%= @loanee.loan.id %></p>
  <p>Loan Start Date: <%= @loanee.loan.start_date %></p>
  <p>Loan Total for <%= @loanee.user.first_name %>: $<%= @loanee.total %></p>
  <% if @loanee.weekly_payments.any?%>
    <div class="progress">
      <div class="progress-bar progress-bar-striped" role="progressbar" style="width: <%= @progress %>%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <%= render 'table', loanee:@loanee %>
    <%= link_to profile_path(@loanee.user.profile) do%>
      <p><i class="fas fa-long-arrow-alt-left"></i></p>
    <% end %>
  <% else %>
    <p class="mark-yellow"><%= @loanee.user.full_name%> has not made any payment yet</p>
    <%= link_to profile_path(@loanee.user.profile) do%>
      <p><i class="fas fa-long-arrow-alt-left"></i></p>
    <% end %>
  <% end %>
</div>
