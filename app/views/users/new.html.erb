<div class="container">
  <h1>Create a profile</h1>
  <%= simple_form_for @user, url: user_profile_path do |f| %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.simple_fields_for :profile do |profile_form| %>
      <%= profile_form.input :village %>
      <%= profile_form.input :birthday%>
      <%= profile_form.input :phone_number %>
      <%= profile_form.input :join_date %>
      <%= profile_form.input :business_type %>
      <%= profile_form.input :photo, as: :file %>
    <% end %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
