<%if user.active_debt.weekly_payments.any?%>
<% payment_count = user.active_debt.weekly_payments.count %>
<% user.active_debt.weekly_payments.first(payment_count).each do |weekly_payment|%>
    <% if weekly_payment == user.active_debt.weekly_payments.first(payment_count).last && payment_count != user.active_debt.loan.weeks %>
      <%= ((user.active_debt.loan.start_date) + ((payment_count + 1) * 7)).strftime("%A %B %d %Y") %>
    <% end %>
<% end %>
<% end %>
