<div class="container">
  <div class="card-dashboard-header">
    <% expected_amount_total = 0 %>
    <% actual_amount_total = 0 %>
    <div class="card-title-dash">
      <h1>Today is <%= @date.strftime("%A %B %d %Y") %></h1>
      <%= form_tag(loans_path, method: :get) do %>
        <%= date_field_tag :on_date, params[:on_date] %>
        <%= button_tag  %>
      <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-around align-items-center p-3">
    <div class="card-info-dash">
      <h2>Expected to collect: $ <%=@amounts[:expected_amount_total].round %> </h2>
      <h2>From <%= @loans_today.count*3 %>  borrowers</h2>
    </div>
    <div class="card-info-dash">
      <h2>Amount Collected: $ <%= @amounts[:actual_amount_total].round%></h2>
      <h2>Number of Group Loans:<%= @loans_today.count %></h2>
    </div>
  </div>
  <% @loans_today.each do |loan| %>
    <div class="card-dashboard-body">
      <p>Loan id: <%= link_to loan.id, loan_path(loan) %></p>
      <h3><%= loan.loanees.first.user.profile.village %></h3>
      <div class="d-flex justify-content-around align-items-center p-3">
        <%loan.loanees.each do |loanee| %>
          <%= cl_image_tag(loanee.user.profile.photo.key, :transformation=>[
            {:gravity=>"face", :height=>80, :width=>80, :crop=>"fill"}, {:radius=>"max"}]) %>
          <div class="flex-column">
            <p><%= loanee.user.full_name%></p>
            <p>Amount due $<%= (loanee.total / loan.weeks).round %></p>
          </div>
        <% end %>
      </div>
      <div class="d-flex justify-content-around align-items-left px-3">
        <p>$ <%= loan.expected_amount_group.round %> Expected per group</p>
        <p> $ <%= loan.actual_amount_group.round %> Amount collected per group </p>
      </div>
    </div>
    <hr>
  <% end %>
</div>
