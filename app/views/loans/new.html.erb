<div class="container">
  <h1>Create Loan</h1>
  <br>
  <br>
    <%= simple_form_for @loan do |f| %>
      <%= f.input :start_date, :as => :date, :start_year => Date.today.year %>
      <%= f.input :weeks, input_html: { min: '1', step: 'any' } %>
      <hr>
      <%= f.simple_fields_for :loanees do |loanee_form| %>
        <%= loanee_form.association :user, label: 'Loanee 1' %>
        <%= loanee_form.input :total, label: 'Amount'  %>
      <% end %>
      <hr>
      <%= f.simple_fields_for :loanees do |loanee_form| %>
        <%= loanee_form.association :user, label: 'Loanee 2'  %>
        <%= loanee_form.input :total, label: 'Amount'  %>
      <% end %>
      <hr>
      <%= f.simple_fields_for :loanees do |loanee_form| %>
        <%= loanee_form.association :user, label: 'Loanee 3'  %>
        <%= loanee_form.input :total, label: 'Amount'  %>
      <% end %>
      <hr>
      <br>
      <%= f.submit class:"btn btn-primary"%>
    <% end %>
</div>
