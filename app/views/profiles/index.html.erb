<div class="container">
  <%= render 'search'%>
  <div class="row align-items-start">
    <% @profiles.each do |profile| %>
      <div class="col-sm-4">
        <div class="card-identity" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(profile.photo.key, width: 300, height: 300, crop: 'fill', gravity: :face, radius: 16, background:"#0000ffff") %>)">
          <div class="card-identity-content">
            <%= link_to '', profile_path(profile), class: 'card-link' %>
            <h2 class="card-name"><%= profile.user.full_name %></h2>
            <h3 class="card-village"><%= profile.village %></h3>
            <div class="card-identity-button">
              <% if profile.user.active_debt %>
                <%= link_to "View Group", loan_loanees_path(profile.user.active_debt), class:'card-view-group-link' %>
              <% else %>
                <%= link_to "No Active Loans", "#", class:'card-view-group-link' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>
