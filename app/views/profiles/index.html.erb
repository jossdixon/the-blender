<div class="container">
  <%= render 'search'%>
<div class="row align-items-start">
    <div class="row">
        <% @profiles.each do |profile| %>
        <div class="col-sm-4">
          <div class="card" style="width: 18rem;">
              <%= cl_image_tag(profile.photo.key, width: 286, height: 180, crop: :thumb, gravity: :face) %>
              <div class="card-body">
                <h2 class="card-name"><%= link_to "#{profile.user.first_name}", profile_path(profile) %></h2>
                <h3 class="card-last_name"> <%= profile.user.last_name %></h3>
                <p class="card-village"><%= profile.village %></p>
              </div>
          </div>
        </div>
        <% end %>
  </div>
 </div>
